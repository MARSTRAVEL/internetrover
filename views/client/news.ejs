<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="The intetnetRover Project@marstravel.fi">
  <meta name="author" content="Yunlong Liu">
  <title>InternetRover</title>
  <link href="css/simple-sidebar.css" rel="stylesheet">
  <style>
    #page-content-wrapper{
      position: relative;
      width: 100vw;
      height: 100vh;
    }
    .container-fluid{
      position: relative;
      width: 100%;
      height: 100%;
    }
    .hamburMenu{
      position: fixed;
      top: 10px;
      left: 10px;
      width: 40px;
      height: 40px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      z-index: 10;
      cursor: pointer;
    }
    .hamburMenu div{
      width: 100%;
     height: 10px;
    background: #17b978;
    }
    #newsList{
      position: absolute;
      top: 50px;
      left: 0;
      width: 100%;
      overflow: scroll;
      height: 100%;
    }
    #shownews{
      position: absolute;
      top: 80px;
      left: 0;
      width: 0%;
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="d-flex" id="wrapper">
    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="hamburMenu" id="hamburMenu">
        <div></div><div></div><div></div>
      </div>
      <div class="container-fluid">
        <div class="newsList" id="newsList">
          <div>
            <h1 class="mt-4">Hot News Today</h1>
            <div class="col-3 align-self-end">
              <button type="button" name="button" id="scrapenews_button">
                UpdateNews
              </button>
              <label>Update: </label>
                <time id="update_time"><%= updated_date %></time>
            </div>
          </div>
          <div class="news_container col">
            <% for(var i=0; i < message.length; i++) { %>
              <ul>
                <li>
                    <a href= <%= message[i].link %> target="ifram_news">
                      <%= message[i].title %>
                    </a>
                </li>
              </ul>
              <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../vendor/jquery/jquery.min.js"></script>
  <script>
  $('#scrapenews_button').click(function(){
      let date = document.getElementById("update_time").textContent;
      date = parseInt(date);
      //date format is: YYYYMMDD
      const current_date = () =>{
        const d = new Date();
        const year = d.getFullYear().toString();
        let month = d.getMonth();
        month = (month+1).toString();
        if (month.length<2) {
          month = '0'+month;
        }
        let day = d.getDate().toString();
        if (day.length<2) {
          day = '0'+day;
        }
        const dateNow = parseInt(year+month+day);
        return dateNow;
      };
      const dateNow = current_date();
      if (dateNow > date) {
        $.ajax({
        url: "/news",
        type: 'post',
        data: dateNow.toString(),
        dataType: 'text',
       });
      document.getElementById("update_time").textContent = dateNow;}
});
  document.getElementById('hamburMenu').onclick = showNews=()=>{
    console.log('long');
    
  }
  </script>
</body>
</html>
