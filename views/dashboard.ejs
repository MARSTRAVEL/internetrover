  $('#scrapenews_button').click(function(){
    let date = document.getElementById("update_time").textContent;
    date = parseInt(date);
    //date format is: YYYYMMDD
const current_date = () =>{
  const d = new Date();
  const year = d.getFullYear().toString();
  let month = d.getMonth();
  month = (month+1).toString();
  if (month.length<2) {
    month = '0'+month;
  }
  let day = d.getDate().toString();
  if (day.length<2) {
    day = '0'+day;
  }
  const dateNow = parseInt(year+month+day);
  return dateNow;
};
const dateNow = current_date();
   if (dateNow > date) {
      $.ajax({
      url: "/dashboard/news",
      type: 'post',
      data: dateNow.toString(),
      dataType: 'text',
     });
    document.getElementById("update_time").textContent = dateNow;}
  });

  const weather = (url) => {
    // Create the XHR request
    const request = new XMLHttpRequest();
    // Return a new promise.
    return new Promise((resolve, reject) => {
      request.open('POST', url, true);
      request.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
      request.onload = () => {
        // This is called even on 404 etc
        // so check the status
        if (request.status === 200 && request.readyState === 4) {
          // Resolve the promise with the response text
          resolve(request.response);
        } else {
          // Otherwise reject with the status text
          // which will hopefully be a meaningful error
          reject(Error(request.statusText));
        }
      };
      // Handle network errors
      request.onerror = () => {
        reject(Error('Network Error'));
      };
      // Make the request
      request.send();
    });
  };
  $('#current_weather').click(function(){
    const openWeatherAPIKey = 'be4f63ffaad56d681f19dba18437e57e';
    const city = document.getElementById('search_city').value;
    let searchLink = "https://api.openweathermap.org/data/2.5/weather?q=" + city + "&appid="+openWeatherAPIKey;
    weather(searchLink)
    .then((response)=>{
      const result = JSON.parse(response);
      const cityName = result.name;
      const tempature = parseInt(result.main.temp - 273) + "Â°";
      const humidity = result.main.humidity + "%";
      const icon = "http://openweathermap.org/img/w/" + result.weather[0].icon + ".png";
      let city_name = document.getElementById('cityName').innerHTML = cityName;
      let city_tempature = document.getElementById('tempature').innerHTML = '<p>'+'tempature:'+'</p>'+tempature;
      let city_humidity = document.getElementById('humidity').innerHTML = '<p>'+'tempature:'+'</p>'+humidity;
      let city_icon = document.getElementById('icon').src = icon;
      })
      .catch((error) => {
      let city_name = document.getElementById('cityName').innerHTML = 'Please type correct city name For example: beijing';
    });
    });
