<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>InternetRover</title>
  <link rel="shortcut icon" href='../pictures/icon.ico'>
  <!-- Bootstrap core CSS -->
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  <!-- Custom styles for this template -->
  <link href="../css/jobhunting.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.1.5/css/fixedHeader.bootstrap4.min.css">
</head>

<body>
  <div>
    <ul class="nav" id="navbar">
      <li class="nav-item">
        <a class="nav-link active" href="/admin">AllApplication</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/jobhunting">NewJobApplication</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/logout">LOGOUT</a>
      </li>
    </ul>
    <!-- Page Content -->
    <div id="page-content-wrapper" style="margin-top:3%">
      <div class="container-fluid">
        <div class="table-responsive">
          <table id="example" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Company</th>
                      <th>Position</th>
                      <th>Date</th>
                      <th>Result</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i=0; i < jobs.length; i++) { %>
                        <% if (jobs[i].result=='Rejection') { %>
                          <tr class="table-danger">
                          <% } else {%>
                            <tr class="table-info">
                            <% } %>
                        <th scope="row"><%= i+1%></th>
                        <td><%= jobs[i].companyName%></td>
                        <td><a href="<%= jobs[i].link%>"><%= jobs[i].position%></a></td>
                        <td><%= jobs[i].date%></td>
                        <td><%= jobs[i].result%></td>
                      </tr>
                      <% } %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>#</th>
                      <th>Company</th>
                      <th>Position</th>
                      <th>Date</th>
                      <th>Result</th>
                    </tr>
                  </tfoot>
              </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript -->
  <script src="../vendor/jquery/jquery.min.js"></script>
  <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript" src="  https://code.jquery.com/jquery-3.3.1.js"></script>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.1.5/js/dataTables.fixedHeader.min.js"></script>
</body>
<script type="text/javascript">
$(document).ready(function() {
  var table = $('#example').DataTable( {
      fixedHeader: true
  } );
} );
</script>
</html>
